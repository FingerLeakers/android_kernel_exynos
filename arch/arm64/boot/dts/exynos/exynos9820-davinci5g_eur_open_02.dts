/plugin/;
#include "exynos9820-sensorhub.dtsi"
#include "exynos9820-display-lcd.dtsi"
#include "battery_data_davinci5g_common.dtsi"
#include "exynos9820-davinci5g_if-pmic-max77705.dtsi"
#include "exynos9820-davinci5g_motor.dtsi"
#include <dt-bindings/clock/exynos9820.h>
#include <dt-bindings/pci/pci.h>
#include "exynos9820-davinci5g_camera.dtsi"
#include "exynos9820-davinci5g_common.dtsi"
#include "exynos9820-davinci5g_fingerprint_00.dtsi"
